<section class="bg-light">
  <div class="container pt-4">
    <div class="row">
      <!-- col-md-4 col-lg-4 col-sm-12 start -->

          <%= render "shared/sidebar_blog_index" %>

      <!-- col-md-4 col-lg-4 col-sm-12 end -->



      <!-- col-md-8 col-lg-8 col-sm-12 start -->
        <style>
          .col{padding-bottom:20px;}
        </style>
      <div class="col-md-8 col-lg-8 col-sm-12">
        <div class="row">

        <% @posts.each do |post| %> 
          <div class="col-md-6 col-lg-6 col-sm-12 col">
            <div class="card" style="width: ;">
              <a href="<%= post_path(post) %>" ><%= image_tag(url_for(post.image), class: 'card img-fluid', height: '200') %></a>
                <div class="card-body">
                    <h5 class="card-title"><%= post.category.title  %></h5>
                    <p class="card-text"><%= truncate(post.text, length: 130) %></p>
                    <div class="d-flex justify-content-between py-2">
                      <span class="fw-bold"><%= post.author  %></span>
                      <span class="fw-bold"><%= post.date  %></span>
                    </div>
                    <a href="<%= post_path(post) %>" class="btn btn-primary">Read More</a>
                </div>
            </div>
          </div>
        <% end %>
         
        </div>
      </div>

      <!-- col-md-8 col-lg-8 col-sm-12 end -->
    </div>
  </div>
</section>



