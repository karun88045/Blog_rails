   <!--Main layout-->
  <main style="margin-top: 20px">
    <div class="container">

        <section>
         <div class="card">
         <div class="card-header py-3">
            <h5 class="mb-0 text-center"><strong>Add Post</strong></h5>
          </div>
          <div class="card-body">
            <div class="container">
              <div class="row">
                <div class="col-md-12 col-lg-12 col-sm-12 mx-auto shadow-lg p-5 rounded">
                  <%# <div class=" pt-5" style="height:;"> %>

                    <%= form_with model:@post, method: :post do |form| %>
                    <div class="form-group py-2">
                      <%= form.label :Image, class: "mb-2" %>
                      <%= form.file_field :image, class: "form-control" %>
                    </div>
                    <div class="form-group py-2">
                      <%= form.label :Title, class: "mb-2" %>
                      <%= form.select :category_id,Category.all.pluck(:title, :id),{prompt: 'select'},{class:'form-control'} %>
                    </div>
                    <div class="form-group py-2">
                      <%= form.label :Text, class: "mb-2" %>
                      <%= form.text_area :text, class: "form-control" %>
                    </div>
                    <div class="form-group py-2">
                      <%= form.label :Author, class: "mb-2" %>
                      <%= form.text_field :author, class: "form-control" %>
                    </div>
                    <div class="form-group py-2">
                      <%= form.label :date, class: "mb-2" %>
                      <%= form.date_field :date, class: "form-control" %>
                    </div>
                    <div class="form-group py-2">
                      <%= form.submit :Save_Post, class: "form-control btn btn-primary" %>
                      <%= link_to "View_Post", posts_path, class: "form-control btn btn-secondary mt-2"%>
                    </div>

                    <% end %>

                  <%# </div> %>
                </div>
              </div>

            </div>
          </div>
         </div>
        </section>

        


     
    </div>
  </main>