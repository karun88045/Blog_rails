   <!--Main layout-->
  <main style="margin-top: 20px">
    <div class="container">

         <section>
         <div class="card">
         <div class="card-header py-3">
            <h5 class="mb-0 text-center"><strong>List Post</strong></h5>
          </div>
          <div class="card-body">
            <div class="container">
              <div class="row">
                <div class="col-md-12 col-lg-12 col-sm-12 mx-auto shadow-lg p-5 rounded">
                  <%# <div class=" pt-5" style="height:;"> %>
                  <%= link_to "Add", new_post_path, class: "btn btn-primary my-2" %>
                    <table class="table table-stripped table-hover table-bordered">
                      <tr class="bg-dark text-light">
                        <th>Id</th>
                        <th>Image</th>
                        <th>Title</th>
                        <th>Text</th>
                        <th>Author</th>
                        <th>Date</th>
                        <th colspan="2" class="text-center">Action</th>
                      </tr>
                      
                      <% @posts.each do |p| %>
                      <tr>
                        <td><%= p.id %></td>
                        <td><%= image_tag(url_for(p.image), width: '100', height: '100', class: 'rounded-circle' ) %></td>
                        <td><%= p.category_id %></td>
                        <td><%= p.text %></td>
                        <td><%= p.author %></td>
                        <td><%= p.date %></td>
                        <td><a href="<%= edit_post_path(p) %>" class="btn btn-primary">Edit</a></td>
                        <td><%= button_to "Delete", post_path(p), method: :delete, class: 'btn btn-danger' %></td> 
                       
                      </tr>
                      <% end %>
                    </table>


                  <%# </div> %>
                </div>
              </div>

            </div>
          </div>
         </div>
        </section>



     
    </div>
  </main>
