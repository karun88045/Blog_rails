 <div class="col-md-4 col-lg-4 col-sm-12">
    <div class="row">

          <div class="col-md-12 col-md-12 col-sm-12 ">
            <ul class="shadow p-4" style="list-style:none;">
            <style>
            ul li a{text-decoration:none;color:black;}
            </style>
              <h2>Search</h2>
              <li class="py-1 my-2" >
                <%= form_with url:"/search", method: :get do |form| %>
                  <%= form.label :title, "Search With Id:" %>
                  <%= form.search_field :category_id, class: "form-control" %>
                  <%= form.submit "Search", class: "my-2 form-control btn btn-primary" %>
                <% end %>
              </li>
            </ul>
          </div>

          <div class="col-md-12 col-md-12 col-sm-12 ">
 

            <ul class="shadow p-4" style="list-style:none;">
              <style>
              ul li a{text-decoration:none;color:black;}
              </style>
                  <h2>Categories</h2>
                  <%= form_with url: "/search", method: :get do |form| %>
                  <%= form.select :category_id,Category.all.pluck(:title, :id),{prompt: 'select'},{class:'form-control'} %>
                  <%= form.submit "Search", class: "my-2 form-control btn btn-primary" %>
                  <% end %>
            </ul>


  
          </div>

          <div class="col-md-12 col-md-12 col-sm-12 py-5">
            <ul class="shadow p-4" style="list-style:none;">
            <style>
            ul li a{text-decoration:none;color:black;}
            </style>
              <h2>Top Post</h2>

              <% Post.all.each do |p| %> 
                <li class=" py-1 my-2">
                  <div class="row">
                    <div class="col-md-2 col-lg-2 col-sm-12"><span class="fs-4 fw-bold"><%= p.id %></span></div>
                    <div class="col-md-10 col-lg-10 col-sm-12">
                      <a href="<%= post_path(p.id) %>" class="fw-bold">
                      <%= truncate(p.text, length: 80) %>
                      </a>
                    </div>
                  </div>
              </li>
              <% end %>
            </ul>
          </div>

          <div class="col-md-12 col-md-12 col-sm-12 py-5">
              <h2 class="pb-4">Top Galary</h2>
              <div class="row">
              
              <% Post.all.each do |p|%>
                <div class="col-md-4 col-lg-4 col-sm-12">
                  <%= image_tag url_for(p.image), width: '100', height: '100'%>
                </div>
              <% end %>
              </div>

          </div>
        </div>
      </div>
